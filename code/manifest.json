{
	"manifest_version": 2,
	"name": "BB Ex",
	"description": "Layout fixes on BitBucket",
	"version": "0.0.9",
	"icons": {
		"16": "img/icon-16.png",
		"48": "img/icon-48.png",
		"128": "img/icon-128.png"
	},
	"permissions": [	
		"storage"
	],
	"browser_action": {
		"default_icon": "img/icon-48.png",
		"default_popup": "settings.html"
	},
	"content_scripts": [
	{
		"matches": [
			"http://bitbucket.org/*", "https://bitbucket.org/*"
		],
		"js": [
			"jquery-1.10.2.min.js", "content.js"
		]
	}]
}
